   <div class="home">
     <RouterLink class="navButton" to="/game">PLAY</RouterLink>
-	<RouterLink class="navButton" to="/invite">INVITE</RouterLink>
+    <button class="navButton" @click="handleInviteClick">INVITE TO CUSTOM GAME</button>
